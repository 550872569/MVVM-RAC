#import <Foundation/Foundation.h>
#import <UIKit/UIKit.h>

@interface KNTextDynamicHeight : NSObject

/**
 *  动态计算文字的宽高
 *
 *  @param text    文字
 *  @param font    文字的font
 *  @param maxSize 最大 size
 *
 *  @return 返回text的size
 */
+ (CGSize)sizeFromText:(NSString *)text textFont:(UIFont *)font maxSize:(CGSize)maxSize;

/**
 *  动态计算文字高度, 默认最大高度是 MAXFLOAT
 *
 *  @param text     文字
 *  @param font     文字的font
 *  @param maxWidth 最大 宽度
 *
 *  @return 返回text的size
 */
+ (CGSize)sizeFromText:(NSString *)text textFont:(UIFont *)font maxWidth:(CGFloat)maxWidth;

@end
